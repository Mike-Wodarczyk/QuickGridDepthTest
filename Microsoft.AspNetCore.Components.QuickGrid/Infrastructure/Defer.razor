
@using Microsoft.AspNetCore.Components.Rendering;

@namespace Microsoft.AspNetCore.Components.QuickGrid.Infrastructure

@if (Depth == 1)
{
    Console.WriteLine("Defer Depth " + Depth);
    @ChildContent
}
else
{
    Console.WriteLine("Defer Depth " + Depth);
    <Defer Depth="@(Depth-1)">
        @ChildContent
    </Defer>
}


