    [Parameter, EditorRequired] public Action<int> RecordDepth { get; set; } = default!;
    [Parameter, EditorRequired] public int Depth { get; set; } = 1;
    [Parameter] public int MaxDepth { get; set; } = 5;
    /// <summary>
