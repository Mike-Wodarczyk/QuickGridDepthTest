
@using Microsoft.AspNetCore.Components.Rendering;

@namespace Microsoft.AspNetCore.Components.QuickGrid.Infrastructure

@if (Depth == MaxDepth)
{
    Console.WriteLine("DepthCounter Depth " + Depth);
    RecordDepth(Depth);
    @ChildContent
}
else
{
    Console.WriteLine("DepthCounter Depth " + Depth);
    RecordDepth(Depth);
    <DepthCounter Depth="@(Depth+1)" RecordDepth="@RecordDepth" MaxDepth="@MaxDepth">
        @ChildContent
    </DepthCounter>
}


