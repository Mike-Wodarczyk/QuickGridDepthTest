			<div class="search-box">
				<input type="search" @bind="@(Filter.Pattern)" @bind:event="oninput" placeholder="filter" />
			</div>
		</ColumnOptions>
	</PropertyColumn>
@{
	Console.WriteLine("After PropertyColumn PropertyColumnWithFilter");
