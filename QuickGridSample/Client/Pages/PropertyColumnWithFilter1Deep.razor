@code {

	[Parameter, EditorRequired]
	public Expression<Func<TGridItem, TProp>> Property { get; set; } = default!;


	[Parameter, EditorRequired]
	public Filter Filter { get; set; } = default!;

	[Parameter, EditorRequired]
	public string Title { get; set; } = default!;

}
